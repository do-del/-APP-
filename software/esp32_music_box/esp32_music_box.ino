void setup() {
  // put your setup code here, to run once:
//  WiFi.softAP(wifi_SSID,wifi_Password);  //打开ESP32热点
//  Udp.begin(udp_port);//启动UDP监听这个端口

  Serial.begin(115200);

  WiFi.begin(wifi_SSID,wifi_Password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
  }
  Serial.println(WiFi.localIP());
  Udp.begin(udp_port);//启动UDP监听这个端口
  ledcSetup(0,1,8);
  ledcAttachPin(tonePin,0);
  ledcWrite(0,0);

  length_a = 29;//这里用了一个sizeof函数，可以查出tone序列里有多少个音符
}

void loop() {
  udp_read();
  duration = 2000 / noteDurations[0];
  if(melody[0] == 1){
    for(int x=2;x<length_a;x++)//循环音符的次数
    {
      if(melody[x] != 0){
        ledcWriteTone(0,melody[x]);
        ledcWrite(0,0x7F);
      }
      else{
        ledcWriteTone(0,1);
        ledcWrite(0,0);
      }
//      int noteDuration = 4000/noteDurations[x];
      uint32_t noteDuration = duration*noteDurations[x];
      delay(noteDuration);
      ledcWrite(0,0);
//      ledcWrite(0,-1);
//      ledcWriteTone(0,-1);
      uint32_t pauseBetweenNotes = noteDuration * 0.30;
      delay(pauseBetweenNotes);
    }
    for(int cc = 1;cc<length_a;cc++){
      Serial.print(noteDurations[cc]);
      Serial.print(",");
    }
    Serial.println("");
    delay(3000);//等待5秒后，循环重新开始
  }
}
